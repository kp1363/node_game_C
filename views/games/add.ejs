<% include ../partials/header %>
	<h1>Add Games</h1>
	<form enctype="multipart/form-data" method="post" action="/games/add">
	  <div class="form-group">
	    <label>Developer</label>
	    <input type="text" class="form-control" name="artist" placeholder="Developed By">
	  </div>
	  <div class="form-group">
	    <label>Game Title</label>
	    <input type="text" class="form-control" name="title" placeholder="Game Title">
	  </div>
	  <div class="form-group">
	    <label>Genre</label>
	    <select name="genre" class="form-control">
	    	<% for(var i=0; i<genres.length; i++) {%>
   				<option value="<%= genres[i].name %>"><%= genres[i].name %></option>
			<% } %>
	    </select>
	  </div>
	  <div class="form-group">
	    <label>Game Info</label>
	    <textarea class="form-control" name="info" placeholder="Game Info"></textarea>
	  </div>
	  <div class="form-group">
	    <label>Release Year</label>
	    <input type="text" class="form-control" name="year">
	  </div>
	  <div class="form-group">
	    <label>Platform</label>
	    <input type="text" class="form-control" name="label">
	  </div>
	  <div class="form-group">
	    <label>Number of Tracks</label>
	    <input type="number" class="form-control" name="tracks">
	  </div>
	  <div class="form-group">
	    <label>Series</label>
	    <input type="file" class="form-control" name="cover">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	   <a class="btn btn-danger" href="/games">Close</a>
	</form>
<% include ../partials/footer %>